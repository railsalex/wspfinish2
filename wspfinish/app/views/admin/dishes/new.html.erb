<h1 class="title orange-color"><%= t('Dish.edit') + "(#{ @restaurant.name })" %></h1>
<%= form_for(@dish, :url => admin_dishes_path) do |f| %>
  <%= input_helper(f, :name, :text_field) %>
  <%= input_helper(f, :price, :text_field) %>
  <%= radio_helper(f, 
                   :statu,
                   t('Dish.statu'),
                   :true => t('Dish.normal'),
                   :false => t('Dish.unnormal')) %>
  <%= radio_helper(f,
                   :group_id,
                   t('group'),
                   name_and_id_to_hash(@restaurant.groups)) %>

  <%= f.submit "commit", :class => "link-button smaller-size" %>
  <%= link_to t('back'), admin_restaurant_path(@restaurant), :class => "link-button smaller-size" %>
<% end %>